{
  "name": "htmx-todomvc",
  "version": "1.0.0",
  "description": "Basic TodoMVC app based on htmx and hyperscript",
  "main": "index.js",
  "scripts": {
    "test": "vitest --run",
    "start": "ts-node --transpile-only ./src/index.ts",
    "dev": "nodemon --ext 'ts,tsx,json' --exec ts-node --transpile-only ./src/index.ts",
    "check": "biome check . && xss-scan",
    "check:apply": "biome check --apply .",
    "preinstall": "npx only-allow pnpm"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@kitajs/html": "^3.1.2",
    "@kitajs/ts-html-plugin": "^1.3.4",
    "@ts-rest/core": "^3.33.0",
    "@ts-rest/express": "^3.33.0",
    "body-parser": "^1.20.2",
    "express": "^4.18.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@biomejs/biome": "1.5.3",
    "@infinitaslearning/module-typescript-configs": "^1.0.8",
    "@types/body-parser": "1.19.5",
    "@types/express": "4.17.21",
    "@types/node": "20.11.17",
    "nodemon": "3.0.3",
    "ts-node": "10.9.2",
    "typescript": "5.3.3",
    "vitest": "1.2.2"
  },
  "packageManager": "pnpm@8.15.1",
  "engines": {
    "node": "^20.11.0",
    "pnpm": "^8.15.1"
